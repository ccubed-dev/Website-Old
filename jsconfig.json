{
    "compilerOptions": {
        "target": "esnext",
        "baseUrl": ".",
        "jsx": "react",
        "paths": {
            "@animations/*": [
                "components/animations/"
            ],
            "@atoms/*": [
                "components/atoms/"
            ],
            "@molecules/*": [
                "components/molecules/"
            ],
            "@organisms/*": [
                "components/organisms/"
            ],
            "@resources/*": [
                "resources"
            ],
            "@constants/*": [
                "resources/constants/"
            ],
            "@images/*": [
                "resources/images/"
            ]
        }
    },
    "exclude": [
        "node_modules",
        "**/node_modules/*",
        "build"
    ]
}